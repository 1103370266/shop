<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cie.mapper.ValidatecodeMapper">
  <resultMap id="BaseResultMap" type="cn.cie.entity.Validatecode">
    <result column="uid" jdbcType="INTEGER" property="uid" />
    <result column="code" jdbcType="VARCHAR" property="code" />
    <result column="ctime" jdbcType="TIMESTAMP" property="ctime" />
  </resultMap>

  <insert id="insert" parameterType="cn.cie.entity.Validatecode">
    insert into validatecode (uid, code)
    values (#{uid,jdbcType=INTEGER}, #{code,jdbcType=VARCHAR})
  </insert>

  <select id="selectByUid" parameterType="java.lang.Integer">
    select code from validatecode where uid = #{uid,jdbcType=INTEGER}
  </select>

  <delete id="delete" parameterType="java.lang.Integer">
    delete from validatecode where uid = #{uid,jdbcType=INTEGER}
  </delete>

</mapper>